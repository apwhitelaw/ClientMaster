@page
@model ClientMaster.Pages.DeleteClientModel
@{
    ViewData["Title"] = "Delete Client";
}

<div class="text-center">
    <h1 class="p-3">Delete Client</h1>
    <div class="container border border-dark w-50 p-3">
        <p>Are you sure you want to delete this client?</p>
        <p>@Model.Client.FirstName @Model.Client.LastName</p>
        <p>DOB: @Model.Client.DateOfBirth.ToShortDateString()</p>
        <form method="post">
            <input asp-for="Client.ClientID" type="hidden" />
            <input type="hidden" name="firstName" value="@Model.Client.FirstName" />
            <input type="hidden" name="lastName" value="@Model.Client.LastName" />
            <a asp-page="Clients" class="w-auto ps-3 pe-3">No</a>
            <button class="btn btn-danger w-auto ps-3 pe-3" type="submit" asp-page-handler="DeleteClient">Yes</button>
        </form>
    </div>
</div>